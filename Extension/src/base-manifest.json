{
    "name": "Moodle passer",
    "description": "Додає кнопки копіювання та вирішення через гпт в тестах moodle ",
    "version": "0.0.5",
    "manifest_version": "",
    "icons": {
      "16": "./icons/16.png",
      "32": "./icons/32.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    },
    "permissions": [
      "storage"
    ],
    "content_scripts": [
      {
        "css": ["./styles/content.css"],
        "js": ["./scripts/content.js"],
        "matches": ["*://*.edu.ua/mod/quiz/*","*://*.edu.ua/moodle/mod/quiz/*","http://127.0.0.1:5500/*"],
        "run_at": "document_idle"
      }
    ]
  }
  