{
  "name": "Moodle passer",
  "description": ":)",
  "version": "0.0.4",
  "manifest_version": 3,
  "icons": {
    "16": "./icons/16.png",
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },
  "action": {
    "default_popup": "./pages/popup.html"
  },
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "permissions": [
    "storage", 
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "content_scripts": [
    {
      "css": ["./styles/contentStyle.css"],
      "js": ["./scripts/browser_polyfil.js", "./scripts/main.js"],
      "matches": ["*://*.edu.ua/mod/quiz/*"],
      "run_at": "document_idle"
    }
  ]
}
